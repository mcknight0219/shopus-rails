<div class="container">
  <div class="cell">
    <div class="profile_banner">
      <div class="head_image">
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/07/Avatar_girl_face.png" alt="" />
      </div>
      <div class="head_text">
        <h4>
          添加邮寄方式
        </h4>
      </div>
    </div>

    <div class="cell">
      <div class="weui_cells weui_cells_form">
        <%= form_tag({controller: 'express', action: 'create'}, method: 'post') do %>
          <div class="weui_cell">
            <div class="weui_cell_hd">
              <label class="weui_label">快递公司</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
              <%= text_field_tag :company, nil, :class => 'weui_input', :placeholder => '请输入公司名称' %>
            </div>
          </div>
          <div class="weui_cell weui_cell_select weui_select_after">
            <div class="weui_cell_hd">
              <label class="weui_label">国家/地区</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
              <%= select_tag(:country, options_for_select([['加拿大', 'Canada'], ['美国', 'USA'], ['中国', 'China']]), :class => 'weui_select') %>
            </div>
          </div>
          <div class="weui_cell weui_cell_select weui_select_before">
            <div class="weui_cell_hd">
              <%= select_tag(:unit, options_for_select([['公斤', 1], ['磅', 2], ['件', 3]]), :class => 'weui_select') %>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
              <%= number_field_tag :rate, nil, :in => 1..9999, :class => 'weui_input', :placeholder => '请输费率' %>
            </div>
          </div>
          <div class="weui_cells_title">选择运输时间区间</div>
          <div class="weui_cell weui_cell_select">
            <div class="weui_cell_bd weui_cell_primary">
              <%= select_tag(:duration, options_for_select([['一个星期之内', 1], ['7天-14天', 2], ['15天-30天', 3]], ['一个星期之内', 1]), :class => 'weui_select') %>
            </div>
          </div>

          <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary" id="good_comment_textarea">
              <%= text_area_tag(:description, nil, :placeholder => "备注", :rows => "4", :class => "weui_textarea") %>
              <div class="weui_textarea_counter">
                <span></span>
              </div>
            </div>
          </div>

          <div class="weui_btn_area" style="margin-top: 15px;">
            <%= submit_tag("添加", :class => "weui_btn weui_btn_primary") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%-# 提示用户删除上传照片对话框 -%>
  <script type="text/template" id="alert_user_dialog">
    <div class="">

    </div>
	</div>
  </script>
</div>
